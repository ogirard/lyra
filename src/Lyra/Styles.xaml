<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mvvm="clr-namespace:Lyra.Framework.MVVM">
    <SolidColorBrush x:Key="PrimaryBrush">#B76BAB</SolidColorBrush>
    <SolidColorBrush x:Key="PrimaryDarkBrush">#5B3656</SolidColorBrush>
    <SolidColorBrush x:Key="SecondaryBrush">#758CC2</SolidColorBrush>
    <FontFamily x:Key="PrimaryFont">Roboto</FontFamily>
    <FontFamily x:Key="PrimaryMonoFont">Roboto Mono</FontFamily>

    <Style TargetType="{x:Type Button}">
        <Setter Property="Margin" Value="10" />
        <Setter Property="FontSize" Value="14" />
    </Style>
</ResourceDictionary>