<Window
    x:Class="Lyra.UI.SongPresenter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Lyra.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SongPresenter"
    Width="1024"
    Height="768"
    d:DataContext="{d:DesignInstance local:SongPresenterViewModel}"
    Background="AntiqueWhite"
    BorderThickness="0"
    KeyDown="OnKeyDown"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock
                Margin="5"
                FontSize="35"
                Foreground="DarkGray"
                Text="{Binding PresentedSong.Number}" />
            <TextBlock
                Margin="5"
                FontSize="35"
                FontWeight="Bold"
                Foreground="{StaticResource PrimaryBrush}"
                Text="{Binding PresentedSong.Title}" />
        </StackPanel>

        <TextBlock
            Grid.Row="1"
            Margin="5"
            FontSize="25"
            Text="{Binding PresentedSong.Text}"
            TextWrapping="Wrap" />
    </Grid>
</Window>
